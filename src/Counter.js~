
export class Counter extends Component {
  constructor(props) {
    super(props);
    this.state = { counter: 0 };
  }

  tick() {
    this.setState({
      counter: this.state.counter + this.props.increment
    });
  }


  render() {
    return (
      <h1 style={{ color: this.props.color }}>
        Counter : {this.state.counter}
      </h1>
    );
  }
}
